<% if book.favorited_by?(current_user) %>
  <%= link_to book_favorites_path(book), method: :delete, data: {"turbolinks"=>false}, remote: true do %>
    ♥<%= book.favorites.count %>
  <% end %>
<% else %>
  <%= link_to book_favorites_path(book), method: :post, data: {"turbolinks"=>false}, remote: true do %>
    ♡<%= book.favorites.count %>
  <% end %>
<% end %>
