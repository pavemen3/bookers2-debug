<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <div class='row'>
        <%= render 'users/info', user: @user %>

        <div class='col'>
          <% if current_user != @user %>
            <% if (current_user.following? @user) && (@user.following? current_user)  %>
              <%= link_to 'Begin Chat', chat_path(@user.id), class:"btn btn-sm btn-info" %>
            <% end %>
          <% end %>
        </div>
      </div>

      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Group Detail</h2>
      <table class='table'>
        <thead>
          <tr>
            <th></th>
            <th>グループ名</th>
            <th>紹介文</th>
            <th>メンバー</th>
            <th></th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td></td>
            <td><%= @group.name %></td>
            <td><%= @group.introduction %></td>
            <td>
              <% @group.users.each do |member| %>
                <%= member.name %><br>
              <% end %>
            </td>
            <td>
              <% if current_user.id == @group.owner_id %>
                <%= link_to "Notice an Event", group_new_mail_path(@group), class: "btn btn-warning" %>
              <% end %>
            </td>
            <td>
              <% if @group.users.include?(current_user) %>
                <%= link_to "Leave this group", group_path(@group.id), method: :delete, class: "btn btn-danger" %>
              <% else %>
                <%= link_to "Join this group", group_join_path(@group.id), method: :get, class: "btn btn-primary" %>
              <% end %>
            </td>
            <td>
              <% if current_user.id == @group.owner_id %>
                <%= link_to "Edit", edit_group_path(@group), class: "btn btn-success" %>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>