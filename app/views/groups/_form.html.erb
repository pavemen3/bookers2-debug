<%= form_with model:group, local:true do |f| %>

  <% if group.errors.any? %>
    <div id="error_explanation">
      <%= group.errors.count %> error prohibited this obj from being saved:
      <ul>
        <% group.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control book_title' %>
  </div>
  <div class="form-group">
    <%= f.label :introduction %>
    <%= f.text_area :introduction, class: 'form-control book_body' %>
  </div>
  <div class="form-group">
    <%= f.file_field :image, accept: "image/*", class: "w-100" %>
  </div>
  <div class="form-group">
    <%= f.submit class: 'btn btn-success' %>
  </div>
<% end %>
