<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <div class='row'>
        <%= render 'info', user: @user %>

        <div class='col'>
          <% if current_user != @user %>
            <% if (current_user.following? @user) && (@user.following? current_user)  %>
              <%= link_to 'Begin Chat', chat_path(@user.id), class:"btn btn-sm btn-info" %>
            <% end %>
          <% end %>
        </div>
      </div>

      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <%= render 'books/index',books: @books %>
      <h2>投稿数の前日比・前週比</h2>
      <table class="table table-bordered">
        <thead>
          <th>今日の投稿数</th>
          <th>前日の投稿数</th>
          <th>前日比</th>
        </thead>
        <tbody>
          <td><%= @today_books.count %></td>
          <td><%= @yesterday_books.count %></td>
          <td><%= @the_day_before %> %</td>
        </tbody>
      </table>
      <table class="table table-bordered">
        <thead>
          <th>今週の投稿数</th>
          <th>前週の投稿数</th>
          <th>前週比</th>
        </thead>
        <tbody>
          <td><%= @this_week_books.count %></td>
          <td><%= @last_week_books.count %></td>
          <td><%= @compared_to_last_week %> %</td>
        </tbody>
      </table>
      <h2>7日分の投稿数</h2>
      <table class="table table-bordered">
        <thead>
          <th>6日前</th>
          <th>5日前</th>
          <th>4日前</th>
          <th>3日前</th>
          <th>2日前</th>
          <th>1日前</th>
          <th>今日</th>
        </thead>
        <tbody>
          <td><%= current_user.books.where('created_at > ?', Time.current.ago(6.days)).count %></td>
          <td><%= current_user.books.where('created_at > ?', Time.current.ago(5.days)).count %></td>
          <td><%= current_user.books.where('created_at > ?', Time.current.ago(4.days)).count %></td>
          <td><%= current_user.books.where('created_at > ?', Time.current.ago(3.days)).count %></td>
          <td><%= current_user.books.where('created_at > ?', Time.current.ago(2.days)).count %></td>
          <td><%= @yesterday_books.count %></td>
          <td><%= @today_books.count %></td>
        </tbody>
      </table>
    </div>
  </div>
</div>
