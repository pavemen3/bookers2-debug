<% if user_signed_in? %>
  <div class="col-md-8 offset-md-4 search_form">
  <%= form_tag(search_path, method: :get) do %>
    <%= text_field_tag 'content' %>
    <%= select_tag 'model', options_for_select({ "User" => "user", "Book" => "book", "Category" => "category" }) %>
    <%= select_tag 'method', options_for_select({ "完全一致" => "perfect", "前方一致" => "forward_match", "後方一致" => "backward_match", "部分一致" => "partial" }) %>
    <%= submit_tag '検索' %>
  <% end %>
  </div>
<% end %>