<div class="container">
  <div class="row">
    <div class="col-xs-6">
      <h2>CHAT WITH <%= @user.name %></h2>

      <table>
        <thead>
          <tr>
            <th style="text-align: left; font-size: 20px;"><%= current_user.name %></th>
            <th style="text-align: right; font-size: 20px;"><%= @user.name %></th>
          </tr>
        </thead>
        <tbody class="message table">
          <% @chats.each do |chat| %>
            <% if chat.user_id == current_user.id %>
              <tr>
                <td><p style="text-align: left;"><%= chat.message %></p></td>
                <td></td>
              </tr>
            <% else %>
              <tr>
                <td></td>
                <td><p style="text-align: right;"><%= chat.message %></p></td>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>

      <%= form_with model: @chat, local: false do |f| %>
        <%= f.text_field :message %>
        <%= f.hidden_field :room_id %>
        <%= f.submit "SEND", class:"btn btn-sm btn-success chat-btn" %>
      <% end %>
    </div>
  </div>
</div>