<% @book.book_comments.each do |book_comment| %>
  <div id="comment_<%= book_comment.id %>" class='row book_comment'>

    <div class='col-md-2 profile_image_<%= book_comment.id %>'>
      <%= image_tag book_comment.user.get_profile_image, size:"63x63" %><br>
      <%= book_comment.user.name %>
    </div>
    <div class='col-md-5 offset-md-1 comment_<%= book_comment.id %>'>
      <%= book_comment.comment %>
    </div>
    <div class='col-md-3 offset-md-1 delete_btn_<%= book_comment.id %>'>
    <% if book_comment.user == current_user %>
      <%= link_to 'Destroy', book_book_comment_path(book_comment.book, book_comment), method: :delete, remote: true, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger destroy_book_comment_#{book_comment.id}"%>
    <% end %>
    </div>
  </div>
<% end %>
